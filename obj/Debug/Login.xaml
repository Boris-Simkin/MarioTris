<Page
    x:Class="MarioTris.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarioTris"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/about.jpg"/>
        </Grid.Background>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" FontSize="66.667" FontFamily="Impact" Foreground="#FFD88F0E" TextAlignment="Center" Text="Please login"/>
        <TextBox x:ConnectionId='1' x:Name="usernameTxtBox" HorizontalAlignment="Left" Margin="330,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="415" FontSize="40" Foreground="#FFD88F0E" FontFamily="Impact"                                         />
        <PasswordBox x:ConnectionId='2' x:Name="passwordBox" HorizontalAlignment="Left" Margin="330,335,0,0" VerticalAlignment="Top" Height="60" Width="415" FontSize="40" Foreground="#FFD88F0E" FontFamily="Impact"                                                                            />
        <TextBlock Margin="125,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" FontSize="40" FontFamily="Impact" Foreground="#FFD88F0E" TextAlignment="Center" Text="Username:" HorizontalAlignment="Left"/>
        <TextBlock Margin="125,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" FontSize="40" FontFamily="Impact" Foreground="#FFD88F0E" TextAlignment="Center" Text="Password:" HorizontalAlignment="Left"/>
        <Button x:ConnectionId='3' x:Name="submitBtn" Content="Submit" HorizontalAlignment="Left" Margin="122,575,0,0" VerticalAlignment="Top" Height="118" Width="273" FontSize="66.667" FontFamily="Impact" Foreground="#FFD88F0E"                IsEnabled="False"/>
        <TextBlock x:Name="StringFromServer" Margin="20,465,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="113" FontSize="40" FontFamily="Impact" Foreground="#FFDE0000" TextAlignment="Center" Text=""/>
        <Button x:ConnectionId='4' x:Name="cancleBtn" Content="Cancle" HorizontalAlignment="Left" Margin="940,575,0,0" VerticalAlignment="Top" Height="118" Width="273" FontSize="66.667" FontFamily="Impact" Foreground="#FFD88F0E"                        />
        <Button x:ConnectionId='5' x:Name="registerBtn" Content="Register new" HorizontalAlignment="Left" Margin="457,575,0,0" VerticalAlignment="Top" Height="118" Width="416" FontSize="66.667" FontFamily="Impact" Foreground="#FFD88F0E"                          />

    </Grid>
</Page>

